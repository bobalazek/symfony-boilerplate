<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width" />
        <style type="text/css">
            {{ file_get_contents('assets/vendor/ink/css/ink.css') }}
        </style>
        <style type="text/css">
            {% block stylesheets %}
                {% include 'CoreBundle:Layouts:email/_stylesheets.html.twig' %}
            {% endblock %}
        </style>
    </head>
    <body>
        <table class="body">
            <tr>
                <td class="center" align="center" valign="top">
                    <center>
                        {% include 'CoreBundle:Layouts:email/_header.html.twig' %}
                        {% block content %}
                            <table class="container content" align="center">
                            <tr>
                                <td>
                                    {% block main %}{% endblock %}
                                </td>
                            </tr>
                            </table>
                        {% endblock %}
                        {% include 'CoreBundle:Layouts:email/_footer.html.twig' %}
                    </center>
                </td>
            </tr>
        </table>
    </body>
</html>
