{% extends 'CoreBundle:Layouts:my.html.twig' %}

{% block title %}{{ 'My Settings' | trans }} | {{ parent() }}{% endblock %}

{% block main %}
    <h1>{{ 'My Settings' | trans }}</h1>
    {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="row">
            <div class="col-md-6">
                <h3>{{ 'Profile' | trans }}</h3>
                {{ form_row(form.profile.title) }}
                {{ form_row(form.profile.firstName) }}
                {{ form_row(form.profile.lastName) }}
                {{ form_row(form.profile.gender) }}
                {{ form_row(form.profile.birthday) }}
            </div>
            <div class="col-md-6">
                <h3>{{ 'Account' | trans }}</h3>
                {{ form_row(form.username) }}
                {{ form_row(form.locale) }}
            </div>
        </div> <!-- /.row -->
        <div class="row">
            <div class="col-md-6">
                {% include 'CoreBundle:Content:my/settings/_email.html.twig' %}
            </div>
            <div class="col-md-6">
                {% include 'CoreBundle:Content:my/settings/_mobile.html.twig' %}
            </div>
        </div> <!-- /.row -->
        <button type="submit"
            class="btn btn-primary btn-lg btn-block" />
            {{ 'Save' | trans }}
        </button>
    {{ form_end(form) }}
{% endblock %}

{% block body_javascripts %}
    {{ parent() }}
    <script>
        jQuery(document).ready(function() {
            $('#new-mobile-code-button').on('click', function() {
                window.location.href = '?new_mobile_code=' +
                    $('#new-mobile-code-input').val();
            });
        });
    </script>
{% endblock %}
