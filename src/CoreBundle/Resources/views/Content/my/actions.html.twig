{% extends 'CoreBundle:Layouts:my.html.twig' %}

{% block title %}{{ 'My Actions' | trans }} | {{ parent() }}{% endblock %}

{% block main %}
    <h1>{{ 'My Actions' | trans }}</h1>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>{{ knp_pagination_sortable(pagination, 'Key', 'ua.key') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'Message', 'ua.message') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'IP', 'ua.ip') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'User Agent', 'ua.userAgent') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'Time', 'ua.createdAt') }}</th>
                </tr>
            </thead>
            <tbody>
                {% for user_action in pagination %}
                    <tr>
                        <td>{{ user_action.getKey() }}</td>
                        <td>{{ user_action.getMessage() }}</td>
                        <td>{{ user_action.getIp() }}</td>
                        <td>{{ user_action.getUserAgent() }}</td>
                        <td>{{ user_action.getCreatedAt() | date(globals.date_time_format) }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">
                            {{ 'my.actions.no_actions_yet.text' | trans }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {{ knp_pagination_render(pagination) }}
{% endblock %}
