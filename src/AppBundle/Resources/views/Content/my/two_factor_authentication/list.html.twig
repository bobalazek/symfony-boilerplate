{% extends 'AppBundle:Layouts:default.html.twig' %}

{% block title %}{{ 'My Two-factor authentication' | trans }} | {{ parent() }}{% endblock %}

{% block main %}
    <h1>
        {{ 'My Two-factor authentication' | trans }}
        <a class="btn btn-sm btn-primary"
            href="{{ url('my.two_factor_authentication.create') }}">
            {{ 'New' | trans }}
        </a>
    </h1>
    {% if app.user.getUserTwoFactorMethods() %}
        <div class="list-group">
            {% for userTwoFactorMethod in app.user.getUserTwoFactorMethods() %}
                <a class="list-group-item"
                    href="{{ url('my.two_factor_authentication.edit', {
                        id: userTwoFactorMethod.getId(),
                    }) }}">
                    <h4 class="list-group-item-heading">
                        {{ userTwoFactorMethod.getMethod() | upper | trans }}
                    </h4>
                </a>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info">
            {{ 'You do not have any two factor methods set up yet.' | trans }}
        </div>
    {% endif %}
{% endblock %}
