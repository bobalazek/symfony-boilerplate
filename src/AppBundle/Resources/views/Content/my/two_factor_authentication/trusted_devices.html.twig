{% extends 'AppBundle:Layouts:default.html.twig' %}

{% block title %}{{ 'Trusted devices' | trans }} | {{ 'My Two-factor authentication' | trans }} | {{ parent() }}{% endblock %}

{% block main %}
    <h1>
        {{ 'My Two-factor authentication' | trans }}
        <a href="{{ url('my.two_factor_authentication') }}"
            class="btn btn-default">
            {{ 'Back' | trans }}
        </a>
    </h1>
    <h2>{{ 'Trusted devices' | trans }}</h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>{{ knp_pagination_sortable(pagination, 'Name', 'utd.name') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'IP', 'utd.ip') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'Last active', 'utd.lastActiveAt') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'Expires', 'utd.expiresAt') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'Time', 'utd.createdAt') }}</th>
                </tr>
            </thead>
            <tbody>
                {% for userTrustedDevices in pagination %}
                    <tr>
                        <td>{{ userTrustedDevices.getName() }}</td>
                        <td>{{ userTrustedDevices.getIp() }}</td>
                        <td>{{ userTrustedDevices.getLastActiveAt()
                            ? userTrustedDevices.getLastActiveAt() | date(globals.date_time_format)
                            : '' }}</td>
                        <td>{{ userTrustedDevices.getExpiresAt()
                            ? userTrustedDevices.getExpiresAt() | date(globals.date_time_format)
                            : '' }}</td>
                        <td>{{ userTrustedDevices.getCreatedAt() | date(globals.date_time_format) }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">
                            {{ 'my.two_factor_authentication.trusted_devices.no_trusted_devices_yet' | trans }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {{ knp_pagination_render(pagination) }}
{% endblock %}
