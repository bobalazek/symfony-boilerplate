{% extends 'AppBundle:Layouts:default.html.twig' %}

{% block title %}{{ 'Login' | trans }} | {{ parent() }}{% endblock %}

{% block main %}
    <h1>{{ 'Login' | trans }}</h1>
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey | trans(error.messageData) }}
        </div>
    {% endif %}
    <form action="{{ path('login') }}" method="post">
        <div class="form-group">
            <label for="username">
                {{ 'Username or email' | trans }}
            </label>
            <input id="username"
                class="form-control"
                type="text"
                name="_username"
                value="{{ last_username }}" />
        </div>
        <div class="form-group">
            <label for="password">
                {{ 'Password' | trans }}
            </label>
            <input id="password"
                class="form-control"
                type="password"
                name="_password" />
        </div>
        <div class="clearfix">
            <div class="pull-left">
                <div class="checkbox">
                    <label>
                        <input id="remember-me"
                            type="checkbox"
                            name="_remember_me" />
                        {{ 'Remember me' | trans }}
                    </label>
                </div>
            </div>
            <div class="pull-right">
                <a class="btn btn-link"
                    href="{{ path('reset_password') }}">
                    {{ 'Reset Password' | trans }}
                </a>
            </div>
        </div>
        <button class="btn btn-block btn-lg btn-primary"
            type="submit">
            {{ 'Login' | trans }}
        </button>
        <hr />
        <a class="btn btn-block btn-default"
            href="{{ path('register') }}">
            {{ 'Register' | trans }}
        </a>
    </form>
{% endblock %}
