{% extends 'AppBundle:Layouts:email.html.twig' %}

{% set activation_url = url(route, {
    id: user.getId(),
    email_activation_code: user.getEmailActivationCode(),
}) %}

{% block main %}
    <table class="row note">
        <tr>
            <td class="wrapper last">
                <h4>{{ 'emails.general.greeting' | trans({
                    '%user_name%': user.getName(),
                }) }}</h4>
                <p>
                     <b>{{ 'Username' | trans }}:</b>
                     {{ user.getUsername() }}
                </p>
                <p>{{ 'emails.user.signup.request.click_link_below_to_activate_account.text' | trans }}</p>
                <table class="twelve columns">
                    <tr>
                        <td class="panel">
                            <a href="{{ activation_url }}"
                                target="_blank">
                                {{ activation_url }}
                            </a>
                        </td>
                        <td class="expander"></td>
                    </tr>
                </table>
                <p>{{ 'emails.general.copy_paste_link_into_browser.text' | trans }}</p>
            </td>
        </tr>
    </table>
{% endblock %}
