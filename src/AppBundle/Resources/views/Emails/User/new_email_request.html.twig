{% extends 'AppBundle:Layouts:email.html.twig' %}

{% block main %}
    <table class="row note">
        <tr>
            <td class="wrapper last">
                <h4>{{ 'emails.general.greeting' | trans({
                    '%user_name%': user.getName(),
                }) | meaning('Available arguments: %user_name%') }}</h4>
                <p>{{ 'emails.user.new_email.request.click_link_below_to_confirm_new_email.text' | trans }}</p>
                <table class="twelve columns">
                    <tr>
                        <td class="panel">
                            <a href="{{ url('my.settings', {
                                new_email_code: user.getNewEmailCode(),
                             }) }}" target="_blank">
                                {{ url('my.settings', {
                                    new_email_code: user.getNewEmailCode(),
                                 }) }}
                            </a>
                        </td>
                        <td class="expander"></td>
                    </tr>
                </table>
                <p>{{ 'emails.general.copy_paste_link_into_browser.text' | trans }}</p>
            </td>
        </tr>
    </table>
{% endblock %}
